<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/text_home_margin_left"
    android:layout_marginStart="@dimen/text_home_margin_left"
    android:background="@color/color_dark_pastel_green">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_dark_pastel_green">

        <ImageView
            android:id="@+id/image_card_credit"
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            android:scaleType="fitXY"
            android:src="@drawable/poster_3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_card_credit_name"
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_name_height"
            android:paddingLeft="@dimen/card_padding"
            android:paddingStart="@dimen/card_padding"
            android:text="@string/app_name"
            android:textColor="@color/color_white"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/image_card_credit"
            app:layout_constraintTop_toBottomOf="@+id/image_card_credit"/>

        <TextView
            android:id="@+id/text_card_credit_role"
            android:layout_width="@dimen/card_width"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingLeft="@dimen/card_padding"
            android:paddingStart="@dimen/card_padding"
            android:text="@string/app_name"
            android:textColor="@color/color_grey_chateau"
            app:layout_constraintLeft_toLeftOf="@id/text_card_credit_name"
            app:layout_constraintTop_toBottomOf="@id/text_card_credit_name"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
